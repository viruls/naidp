{
  "name": "@naidp/db",
  "version": "1.0.0",
  "description": "Database utilities and repository implementations for NAIDP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "migrate:dev": "NODE_ENV=development node dist/migrations/run.js",
    "migrate:prod": "NODE_ENV=production node dist/migrations/run.js"
  },
  "dependencies": {
    "@naidp/domain": "workspace:*",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.0",
    "knex": "^2.5.0"
  },
  "devDependencies": {
    "@types/pg": "^8.10.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}